{
  "name": "snowball-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/server.js",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "db:bootstrap": "bash scripts/bootstrap-db.sh",
    "db:stop": "bash scripts/stop-db.sh",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:seed": "npm run db:generate && tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "prisma": "^6.16.1",
    "supertest": "^7.1.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
